<!DOCTYPE html>
<html>
<head>
    <title>League Lineup</title>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Elite Scheduling" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @*IE10 mobile section?*@
</head>
<body>
    @Html.AntiForgeryToken()

    <div id="applicationHost" class="container body-content">
        @RenderBody()
    </div>

    <div id="footer">
        <div class="container">
            <span class="pull-right text-info credit">League Lineup - © @DateTime.Now.Year Steve Michelotti</span>
        </div>
    </div>

    @Scripts.Render("~/Scripts/vendor.js")
    @RenderSection("scripts", required: false)
</body>
</html>
